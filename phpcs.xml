<?xml version="1.0"?>
<ruleset name="Project rules">
    <description>Project specific PHPCS rules</description>
    <!-- Inherit PSR12 -->
    <rule ref="PSR12"/>

    <!-- increase line limit to 200 -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="200"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>
</ruleset>


